<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/football_field_background"
    android:padding="16dp">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:onClick="onLogoClick">

        <ImageView
            android:id="@+id/football_logo_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rounded_logo" />

        <ImageView
            android:id="@+id/football_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/football_logo"
            android:layout_gravity="center"
            android:contentDescription="Football logo"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <!-- Vos autres éléments comme EditText et Button -->

</LinearLayout>
