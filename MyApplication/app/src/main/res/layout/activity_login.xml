<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/football_field_background"
    android:padding="16dp">

    <!-- Email Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:alpha="0.8"
        android:background="@drawable/rounded_border_light_blue"
        android:textColor="#000000" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"
        android:alpha="0.8"
        android:background="@drawable/rounded_border_light_blue"
        android:textColor="#000000" />

    <!-- Login Button -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se Connecter"
        android:textColor="#FFFFFF"
        android:background="@drawable/green_button_gradient"
        android:layout_marginTop="20dp"
        android:padding="14dp" />

    <!-- Sign-up Text -->
    <TextView
        android:id="@+id/txt_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pas encore inscrit ? CrÃ©er un compte"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />
</LinearLayout>